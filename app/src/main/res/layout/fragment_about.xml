<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="pokemon"
            type="com.artemissoftware.pokedex.requests.models.PokemonResponse"/>


    </data>


<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.pokemon.AboutFragment"
    android:padding="20dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--  Description   -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/id_titleDescription_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:lineSpacingExtra="5dp"
                android:lineSpacingMultiplier="1.5"
                android:textColor="@color/color_secondary_text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/id_bodyDescription_TextView"
                android:lineSpacingExtra="5dp"
                android:lineSpacingMultiplier="0.9"
                android:layout_below="@+id/id_titleDescription_TextView"
                android:layout_width="match_parent"
                android:textColor="@color/color_third_text"
                android:gravity="left"
                android:text="@{pokemon.description, default=description}"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="12dp"
                android:minHeight="50dp"
                android:textSize="16sp"
                android:layout_height="wrap_content" />

        </RelativeLayout>



    </LinearLayout>




</FrameLayout>
</layout>

