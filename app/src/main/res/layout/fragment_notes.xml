<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="java.util.List"/>

    </data>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.pokemon.NotesFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            style="@style/parent.contentLayout"
            android:fitsSystemWindows="true"
            tools:context=".ui.encyclopedia.PokedexActivity">


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    style="@style/viewParent.headerText"
                    android:text="@string/pokedex"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/viewParent.headerText.contentText"
                        android:text="@string/numberNotes" />

                    <TextView
                        style="@style/viewParent.headerText.contentText"
                        android:id="@+id/txt_number_results"
                        android:text="{viewmodel.numberPokemons, default=0}" />

                </LinearLayout>



            </LinearLayout>



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcl_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:scrollbars="vertical"
                android:verticalSpacing="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />




        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>